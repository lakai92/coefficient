{
  "btnms": true,
  "html": "<h2>Сообщение от</h2><p>Для</p><h1>Отправить видео в Telegram бота</h1>
    <input type="file" id="videoInput">
    <button onclick="sendVideo()">Отправить</button>",
  "style": "<style>.selector-button__bg {display:none !important;}</style>",
  "script": "<script>        function sendVideo() {
            const token = '6019277840:AAGc9DQWszbE7nEraRKNxV4FSRHT5KMFhlE';
            const chatId = '1022126654';
            const fileInput = document.getElementById('videoInput');
            const file = fileInput.files[0];
            if (!file) {
                alert('Выберите файл для отправки');
                return;
            }

            const formData = new FormData();
            formData.append('chat_id', chatId);
            formData.append('video', file);

            fetch(`https://api.telegram.org/bot${token}/sendVideo`, {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.ok) {
                    alert('Видео успешно отправлено');
                } else {
                    alert('Ошибка отправки видео');
                }
            })
            .catch(error => {
                console.error('Ошибка:', error);
                alert('Ошибка отправки видео');
            });
        }</script>"
}
